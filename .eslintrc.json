{
  "extends": "next/core-web-vitals",
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "comma-dangle": [2, "always-multiline"],
    "eol-last": [2, "windows"],
    "semi": [2, "always"],
    "quotes": [2, "single", { "avoidEscape": true }],
    "curly": ["error", "all"],
    // "max-len": ["error", { "code": 80, "ignoreUrls": true }],
    "no-confusing-arrow": ["error", { "allowParens": false }]
  }
}
